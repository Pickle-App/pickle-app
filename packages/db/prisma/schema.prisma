generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
    relationMode = "prisma"
}

model Profiles {
    id Int  @id @default(autoincrement())
    clerk_user_id Int @unique
    created_at DateTime @default(now())
    self_skill_rating Decimal
    community_skill_rating Decimal?
    bio String? @db.VarChar(500)
    age Int?
    city String
    state States
    events_created Events[]
}

model Events {
    id Int @id @default(autoincrement())
    created_by Profiles @relation(fields: [creator_id], references: [id])
    creator_id Int
    title String
    description String? @db.VarChar(200)
    datetime DateTime
    skill_level Decimal?
    location Locations @relation(fields: [location_id], references: [id])
    location_id Int
    slots_available Int?
    private Boolean @default(false)
    type EventType?
    created_at DateTime @default(now())
    invites EventInvites[]

    @@index([creator_id])
    @@index([location_id])
    @@index([type])
    @@index([datetime])
}

model EventInvites {
    id Int @id @default(autoincrement())
    event Events @relation(fields: [event_id], references: [id])
    event_id Int
    user_id Int
    status AttendeeStatus @default(PENDING)

    @@index([event_id])
    @@index([user_id])
}

model Locations {
    id Int @id @default(autoincrement())
    events Events[]
    name String
    city String
    state States
    type CourtType?
    lines Boolean?
    nets NetType?
    lights Boolean?
    validated Boolean?
}

